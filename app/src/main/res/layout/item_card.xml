<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="270dp"
    android:layout_height="180dp"
    android:layout_margin="@dimen/dimen_8dp"
    app:cardCornerRadius="5dp">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/cardLinear"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/yelloCard"
            android:orientation="vertical"
            android:padding="@dimen/dimen_16dp">

            <LinearLayout
                android:id="@+id/cardTitle"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="top|start"
                android:layout_weight="1.5"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/cardLogo"
                    android:layout_width="@dimen/iconSize"
                    android:layout_height="@dimen/iconSize"
                    android:layout_marginRight="@dimen/dimen_8dp"
                    android:src ="@drawable/cycling"/>

                <TextView
                    android:id="@+id/cardNameText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/dimen_16dp"
                    android:textStyle="bold"
                    android:typeface="monospace" />
            </LinearLayout>

            <TextView
                android:id="@+id/cardNumber"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:letterSpacing="0.1"
                android:maxLines="1"
                android:textColor="@color/realBlack"
                android:textSize="@dimen/dimen_16dp"
                android:typeface="monospace" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="@dimen/dimen_8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/iconSize"
                    android:layout_height="@dimen/iconSize"
                    android:src="@drawable/baseline_credit_card_black_24dp"
                    android:layout_marginRight="@dimen/dimen_8dp" />

                <TextView
                    android:id="@+id/cardPeriodNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/realBlack"
                    android:typeface="monospace" />
            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:text="따릉이 빠른 결제 : 빠릉이"
                    android:textColor="@color/realBlack"
                    android:textSize="@dimen/dimen_10dp"
                    android:textStyle="bold"
                    android:typeface="monospace" />
            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/addCardLinear"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/halfTrans"
            android:orientation="vertical"
            android:visibility="gone"
            android:gravity="center">
            <ImageView
                android:id="@+id/addCardBtn"
                android:layout_width="@dimen/dimen_24dp"
                android:layout_height="@dimen/dimen_24dp"
                android:src="@drawable/add_card"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_8dp"
                android:textSize="12dp"
                android:textColor="@color/realWhite"
                android:text="카드 추가"/>
        </LinearLayout>
    </FrameLayout>


</android.support.v7.widget.CardView>