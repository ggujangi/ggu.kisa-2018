<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/realWhite"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/rentTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:padding="@dimen/dimen_16dp"
            android:text="밀리아나2빌딩앞"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/realWhite" />

        <ImageView
            android:id="@+id/favorStar"
            android:layout_width="@dimen/dimen_24dp"
            android:layout_height="@dimen/dimen_24dp"
            android:layout_gravity="end|center_vertical"
            android:layout_marginRight="@dimen/dimen_16dp"
            android:src="@drawable/favor_star_n" />
    </FrameLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/dimen_8dp"
        android:layout_marginTop="@dimen/dimen_16dp"
        android:text="대여 가능 수" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_8dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/remainRentalCnt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="@android:color/holo_red_light" />

        <TextView
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="/"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/realBlack" />

        <TextView
            android:id="@+id/totalRentalCnt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="16"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="@color/realBlack" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/dimen_8dp"
        android:layout_marginLeft="@dimen/dimen_16dp"
        android:layout_marginRight="@dimen/dimen_16dp"
        android:layout_marginTop="@dimen/dimen_8dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/startPoint"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dimen_8dp"
            android:layout_weight="1"
            android:background="@color/realWhite"
            android:drawablePadding="@dimen/dimen_8dp"
            android:drawableStart="@drawable/start_location"
            android:text="출발지 설정" />

        <Button
            android:id="@+id/endPoint"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_8dp"
            android:layout_weight="1"
            android:background="@color/realWhite"
            android:drawablePadding="@dimen/dimen_8dp"
            android:drawableStart="@drawable/end_location"
            android:text="도착지 설정" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/reservationBtn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_16dp"
            android:layout_marginLeft="@dimen/dimen_16dp"
            android:layout_marginRight="@dimen/dimen_8dp"
            android:layout_marginTop="@dimen/dimen_8dp"
            android:background="@drawable/rent_btn"
            android:text="찜하기" />

    </LinearLayout>

</LinearLayout>